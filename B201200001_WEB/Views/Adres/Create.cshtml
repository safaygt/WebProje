<script>
    $(function () {
        $('#Sehir_ID').change(function () {
            var id = $('#Sehir_ID').val();
            $.ajax({
                url: '/Adres/ilceGetir',
                data: { p: id },
                type: "POST",
                dataType: "Json",
                success: function (data) {
                    console.log(data);
                    $('#ilce_ID').empty();
                    for (var i = 0; i < data.length; i++) {
                        $('#ilce_ID').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");
                    }
                }
            });
        });
    });
</script>

